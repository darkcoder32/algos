Time Complexity = O(nlogn)

int findPlatform(int arr[], int dep[], int n){
    sort(arr,arr+n);
    sort(dep,dep+n);
    int i=0,j=0,count=0,ans=0;
    while(i<n && j<n){
        if(arr[i]<=dep[j]){
            count++;
            ans=max(count,ans);
            i++;
        }
        else{
            j++;
            count--;
        }
    }
    return ans;
}
