Time Compplexity = O(n*n)

int selectionSort(int arr[], int n)  
{  
    int writes=0;
    int i, j, min_idx;  
    for (i = 0; i < n-1; i++)  
    {  
        min_idx = i;  
        for (j = i+1; j < n; j++)  
        if (arr[j] < arr[min_idx])  
            min_idx = j;  
        if(min_idx!=i){
            swap(arr[min_idx], arr[i]); 
            writes++;
        }
    }  
    return writes;
} 
